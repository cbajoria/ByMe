<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ByMe.View.ForgotPassword" BackgroundColor="White">
  <StackLayout Spacing="20" Padding="30">
    <Image Source="bymegreen.png" HorizontalOptions="Center"></Image>
    <Label Text="Enter the email address associated with your account" FontSize="20" HorizontalTextAlignment="Center" TextColor="Black"></Label>
    <StackLayout>
    <Entry x:Name="emailaddress" Placeholder="Email Address" TextColor="Black" PlaceholderColor="Gray" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" ></Entry>
    <BoxView HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand"></BoxView>
    </StackLayout>
    <Button Clicked="ForgotPwdClicked" Text="Send" HorizontalOptions="FillAndExpand" BackgroundColor="#2DCA71" TextColor="White" ></Button>
    </StackLayout>

</ContentPage>